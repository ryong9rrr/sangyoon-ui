{
  "compilerOptions": {
    "target": "es5",
    "module": "CommonJS",
    "lib": ["esnext", "DOM"],
    "allowJs": true,
    "downlevelIteration": true,
    "strict": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "declaration": true,
    "outDir": "./dist"
  },
  "exclude": ["node_modules", "**/__tests__", "**/*.test.*"],
  "include": ["lib"]
}
