{
  "compilerOptions": {
    "target": "es5",
    "module": "CommonJS",
    "lib": ["esnext", "DOM"],
    "allowJs": true,
    "downlevelIteration": true,
    "strict": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "exclude": ["node_modules"],
  "include": ["./src"]
}
